FROM golang:1.20-alpine AS builder

WORKDIR /app

# Install air for hot-reload in development
RUN go install github.com/cosmtrek/air@latest

# Copy go.mod and go.sum first to leverage Docker cache
COPY go.mod go.sum* ./
RUN go mod download

# Copy the source code
COPY . .

# Set up the air configuration for hot reloading
COPY .air.toml* ./
RUN if [ ! -f .air.toml ]; then \
        echo 'root = "."' > .air.toml && \
        echo 'tmp_dir = "tmp"' >> .air.toml && \
        echo '[build]' >> .air.toml && \
        echo '  cmd = "go build -o ./tmp/main ./src/api"' >> .air.toml && \
        echo '  bin = "./tmp/main"' >> .air.toml && \
        echo '  delay = 1000' >> .air.toml && \
        echo '  exclude_dir = ["assets", "tmp", "vendor"]' >> .air.toml && \
        echo '  include_ext = ["go", "tpl", "tmpl", "html"]' >> .air.toml && \
        echo '  kill_delay = "0s"' >> .air.toml && \
        echo '[screen]' >> .air.toml && \
        echo '  clear_on_rebuild = true' >> .air.toml; \
    fi

# Expose default port
EXPOSE 8080

# Run air for hot reloading
CMD ["air", "-c", ".air.toml"]
